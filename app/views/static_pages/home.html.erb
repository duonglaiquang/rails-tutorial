<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "microposts.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>

  <div class="center jumbotron">
    <h1><%= t ".sample_app" %></h1>

    <h2>
      <%= t(".home_page", link: link_to(t(".ruby_on_rails"), "http://www.railstutorial.org/")).html_safe %>
    </h2>

    <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails logo"), "http://rubyonrails.org/" %>
<% end %>
